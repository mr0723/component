/* component/component.wxss */
.status-bar{
    width: 100%;
    height: 64px;
    z-index: 999;
    position: fixed;
    top: 0;
    left: 0;
}
.goBack {
    position: absolute;
    top: 15rpx;
    font-size: 12pt;
}

.goBack image {
    width: 18rpx;
    height: 33rpx;
    padding: 12rpx 20px 0 30rpx;
}

.tabar {
    display: flex;
    justify-content: center;
    background: white;
}

.tabar2 {
    background: transparent !important;
}

.tabar2 text {
    color: #fff !important;
    font-weight: lighter !important;
}

.tabar text {
    padding: 20rpx 30rpx;
    font-size: 34rpx;
    font-weight: 600;
}

.tabar .active {
    color: #fff;
}
